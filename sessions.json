---
layout: null
---
{
  "sessions": [
{% for session_hash in site.data.sessions %}{% assign session = session_hash[1] %}    {
      "slug": {{ session.slug | jsonify }},
      "title": {{ session.title | jsonify }},
      "description": {{ session.description | jsonify | strip_newlines }},
      "level": {{ session.level | jsonify }},
      "speaker": {
	"speaker": {{ session.speaker | jsonify }}, {% for speaker_hash in site.data.speakers %}{% assign speaker = speaker_hash[1] %}{% if speaker.slug == session.speaker %}
	"name": {{ speaker.name | jsonify }}{% endif %}{% endfor %}
      }
    }{% if forloop.rindex0 > 0 %}, {% endif %}
{% endfor %}  ]  
}